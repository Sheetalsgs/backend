{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The template used to create an ECS Service from the ECS Console.",
  "Parameters": {
    "ECSClusterName": {
      "Type": "String",
      "Default": "test1"
    },
    "SecurityGroupIDs": {
      "Type": "CommaDelimitedList",
      "Default": "sg-038ca11cfb7c1cddc"
    },
    "SubnetIDs": {
      "Type": "CommaDelimitedList",
      "Default": ""
    },
    "VpcID": {
      "Type": "String",
      "Default": "vpc-08c542d168f9c9fe0"
    },
    "LoadBalancerName": {
      "Type": "String",
      "Default": "alb"
    }
  },
  "Resources": {
    "ECSService": {
      "Type": "AWS::ECS::Service",
      "Properties": {
        "Cluster": "test1",
        "TaskDefinition": "arn:aws:ecs:ap-south-1:651622532734:task-definition/frontend-taskdef:1",
        "LaunchType": "EC2",
        "ServiceName": "frontend-service",
        "SchedulingStrategy": "REPLICA",
        "DesiredCount": 2,
        "LoadBalancers": [
          {
            "ContainerName": "frontend",
            "ContainerPort": 3000,
            "LoadBalancerName": {
              "Ref": "AWS::NoValue"
            },
            "TargetGroupArn": {
              "Ref": "TargetGroup"
            }
          }
        ],
        "HealthCheckGracePeriodSeconds": "200",
        "DeploymentConfiguration": {
          "MaximumPercent": 200,
          "MinimumHealthyPercent": 100,
          "DeploymentCircuitBreaker": {
            "Enable": true,
            "Rollback": true
          }
        },
        "DeploymentController": {
          "Type": "ECS"
        },
        "ServiceConnectConfiguration": {
          "Enabled": false
        },
        "PlacementStrategies": [],
        "PlacementConstraints": [
          {
            "Type": "memberOf",
            "Expression": "attribute:name-prod"
          }
        ],
        "Tags": [],
        "EnableECSManagedTags": true
      },
      "DependsOn": [
        "ListenerRule"
      ]
    },
    "TargetGroup": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Properties": {
        "HealthCheckPath": "/api/data",
        "Name": "frontend-tg",
        "Port": 80,
        "Protocol": "HTTP",
        "TargetType": "instance",
        "HealthCheckProtocol": "HTTP",
        "VpcId": "vpc-08c542d168f9c9fe0"
      }
    },
    "ListenerRule": {
      "Type": "AWS::ElasticLoadBalancingV2::ListenerRule",
      "Properties": {
        "Actions": [
          {
            "Type": "forward",
            "TargetGroupArn": {
              "Ref": "TargetGroup"
            }
          }
        ],
        "Conditions": [
          {
            "Field": "path-pattern",
            "Values": [
              "/api/data"
            ]
          }
        ],
        "ListenerArn": "arn:aws:elasticloadbalancing:ap-south-1:651622532734:listener/app/alb/ce3af267ee7e5386/956bf307a04c059e",
        "Priority": "1"
      }
    }
  },
  "Outputs": {
    "ClusterName": {
      "Description": "The cluster used to create the service.",
      "Value": {
        "Ref": "ECSClusterName"
      }
    },
    "ECSService": {
      "Description": "The created service.",
      "Value": {
        "Ref": "ECSService"
      }
    },
    "TargetGroup": {
      "Description": "The created target group.",
      "Value": {
        "Ref": "TargetGroup"
      }
    },
    "ListenerRule": {
      "Description": "The created listener rule.",
      "Value": {
        "Ref": "ListenerRule"
      }
    }
  }
}
